    </inputs>
    <outputs>
        <!-- <data from_work_dir="tempstargenomedir" auto_format="false"></data>-->
        <data name="out_file" format="data_manager_json" />
    </outputs>
    <help>Help!</help>
    <citations><citation></citation>
    </citations>
